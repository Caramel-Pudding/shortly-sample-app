{
  "name": "shortify",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--inspect' next dev",
    "dev:vitals": "NEXT_PUBLIC_VITALS=true NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "start": "next start",
    "analyze": "ANALYZE=true next build",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage",
    "eslint": "eslint ./ --ext .js,.jsx,.ts,.tsx --cache",
    "eslint:fix": "eslint ./ --ext .js,.jsx,.ts,.tsx --cache --fix",
    "stylelint": "stylelint '**/*.css'",
    "stylelint:fix": "stylelint '**/*.css' --fix",
    "simple-git-hooks:update": "npx simple-git-hooks"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn eslint --quiet",
      "yarn stylelint"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "yarn tsc --noEmit && yarn test && npx lint-staged"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.5.1",
    "@welldone-software/why-did-you-render": "^6.1.1",
    "autoprefixer": "^10.2.5",
    "classnames": "^2.3.0",
    "next": "10.1.3",
    "next-compose-plugins": "^2.2.1",
    "postcss": "^8.2.15",
    "postcss-flexbugs-fixes": "^5.0.1",
    "postcss-preset-env": "^6.7.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-redux": "^7.2.4",
    "redux": "^4.1.0",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@next/bundle-analyzer": "^10.1.3",
    "@svgr/webpack": "^5.5.0",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@types/classnames": "^2.2.11",
    "@types/jest": "^26.0.23",
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.3",
    "@types/react-redux": "^7.1.16",
    "@types/redux-persist": "^4.3.1",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "babel-loader": "^8.2.2",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-sonarjs": "^0.6.0",
    "eslint-plugin-unicorn": "^29.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-fetch-mock": "^3.0.3",
    "prettier": "^2.1.2",
    "simple-git-hooks": "^2.2.0",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.3",
    "webpack": "^4.0.0"
  }
}
